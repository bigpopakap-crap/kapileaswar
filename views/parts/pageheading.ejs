<!--
	BEGIN CAROUSEL
-->
<%
	var CAROUSEL_TARGET_ID = 'pageheading-carousel';
	var CAROUSEL_TARGET_SEL = '#' + CAROUSEL_TARGET_ID;
	
	var CAROUSEL_HEIGHT = '200px';
%>
<style type="text/css">
	<%= CAROUSEL_TARGET_SEL %> {
		height: <%= CAROUSEL_HEIGHT %>;
	}
	
	<%= CAROUSEL_TARGET_SEL %> img {
		height: <%= CAROUSEL_HEIGHT %>;
		min-width: 100%;
	}
</style>
<div id="<%= CAROUSEL_TARGET_ID %>" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="0" class="active"></li>
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="1"></li>
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="2"></li>
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="3"></li>
	</ol>

	<div class="carousel-inner">
		<div class="item active">
			<img src="https://scontent-a-lax.xx.fbcdn.net/hphotos-ash3/t1.0-9/1236126_10200434346441193_976239803_n.jpg" alt="first-image">
			<div class="carousel-caption">
				First image
			</div>
		</div>
		
		<div class="item">
			<img src="https://scontent-b-lax.xx.fbcdn.net/hphotos-prn1/t1.0-9/74952_4152476330189_764627625_n.jpg" alt="second-image">
			<div class="carousel-caption">
				Second image
			</div>
		</div>
		
		<div class="item">
			<img src="https://scontent-a-lax.xx.fbcdn.net/hphotos-ash2/t1.0-9/254790_3821101686030_1897742389_n.jpg" alt="third-image">
			<div class="carousel-caption">
				Third image
			</div>
		</div>
		
		<div class="item">
			<img src="https://fbcdn-sphotos-e-a.akamaihd.net/hphotos-ak-ash3/t1.0-9/577508_2952726857202_439452400_n.jpg" alt="fourth-image">
			<div class="carousel-caption">
				Fourth image
			</div>
		</div>
	</div>

	<a class="left carousel-control" href="<%= CAROUSEL_TARGET_SEL %>" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a class="right carousel-control" href="<%= CAROUSEL_TARGET_SEL %>" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>

<!--
	BEGIN NAVBAR
-->
<%
	var NAVBAR_COLLAPSE_TARGET_ID = 'pageheading-navbar-collapse';
	var NAVBAR_COLLAPSE_TARGET_SEL = '#' + NAVBAR_COLLAPSE_TARGET_ID;
%>
<style type="text/css">
	.navbar {
		border-radius: 0 !important;
	}
	
	.navbar:not(navbar-fixed-top) {
		border-top: none;
	}
</style>
<nav class="navbar navbar-inverse" role="navigation">
	<div class="container-fluid">
	    <div class="navbar-header">
			<button type="button" class="navbar-toggle"
					data-toggle="collapse" data-target="<%= NAVBAR_COLLAPSE_TARGET_SEL %>">
				<span class="sr-only">Navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
	    	
	    	<a href="/" class="navbar-brand" href="">Kapil Easwar</a>
	    </div>

		<div id="<%= NAVBAR_COLLAPSE_TARGET_ID %>" class="collapse navbar-collapse">
			<ul class="nav navbar-nav">
				<!-- 
					TODO detect which page we're on and highlight
					the approriate button
				-->
				<li><a href="/resume">Resume</a></li>
				<li><a href="/projects/tech">Tech projects</a></li>
				<li><a href="/contact">Contact</a></li>
			</ul>
			
			<ul class="nav navbar-nav navbar-right">
				<li class="hidden-xs">
					<p class="navbar-text">
						Connect &nbsp;
						<a href="/contact/facebook">
							<span class="glyphicon glyphicon-user"></span>
						</a>
					</p>
				</li>
			</ul>
		</div>
	</div>
</nav>
<script type="text/javascript">
	var $window = $(window);
	
	var $nav = $('nav');
	var navTop = $nav.offset().top;
	
	$window.scroll(function() {
		$nav.toggleClass('navbar-fixed-top', navTop < $window.scrollTop());
	});
</script>


<%
	var CAROUSEL_TARGET_ID = 'pageheading-carousel';
	var CAROUSEL_TARGET_SEL = '#' + CAROUSEL_TARGET_ID;
	
	var CAROUSEL_HEIGHT = '200px';
%>
<style type="text/css">
	<%= CAROUSEL_TARGET_SEL %> {
		height: <%= CAROUSEL_HEIGHT %>;
	}
	
	<%= CAROUSEL_TARGET_SEL %> .item {
		height: <%= CAROUSEL_HEIGHT %>;
	}
	
	<%= CAROUSEL_TARGET_SEL %> .item img {
		width: 100%;
	}
</style>
<div id="<%= CAROUSEL_TARGET_ID %>" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="0" class="active"></li>
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="1"></li>
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="2"></li>
		<li data-target="<%= CAROUSEL_TARGET_SEL %>" data-slide-to="3"></li>
	</ol>

	<div class="carousel-inner">
		<div class="item active">
			<img src="https://scontent-a-lax.xx.fbcdn.net/hphotos-ash3/t1.0-9/1236126_10200434346441193_976239803_n.jpg" alt="first-image">
			<div class="carousel-caption">
				First image
			</div>
		</div>
		
		<div class="item">
			<img src="https://scontent-b-lax.xx.fbcdn.net/hphotos-prn1/t1.0-9/74952_4152476330189_764627625_n.jpg" alt="second-image">
			<div class="carousel-caption">
				Second image
			</div>
		</div>
		
		<div class="item">
			<img src="https://scontent-a-lax.xx.fbcdn.net/hphotos-ash2/t1.0-9/254790_3821101686030_1897742389_n.jpg" alt="third-image">
			<div class="carousel-caption">
				Third image
			</div>
		</div>
		
		<div class="item">
			<img src="https://fbcdn-sphotos-e-a.akamaihd.net/hphotos-ak-ash3/t1.0-9/577508_2952726857202_439452400_n.jpg" alt="fourth-image">
			<div class="carousel-caption">
				Fourth image
			</div>
		</div>
	</div>

	<a class="left carousel-control" href="<%= CAROUSEL_TARGET_SEL %>" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a class="right carousel-control" href="<%= CAROUSEL_TARGET_SEL %>" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$carousel = $('<%= CAROUSEL_TARGET_SEL %>');
		
		$carousel.swiperight(function() {
			$carousel.carousel('next');
		});
		
		$carousel.swipeleft(function() {
			$carousel.carousel('prev');
		});
	});
</script>

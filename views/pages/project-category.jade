extends ../layouts/layout.jade
include ../mixins/navbar.jade

//-
	Overview of a category of projects
	
	Params:
		catkey - the key of the category object to display
block body
	- var CATEGORY = DATA.PROJECT_CATEGORIES[catkey]

	+navbar("navbar", {
			initFixed: true
		})
	
	h1 My projects for category: #{CATEGORY.name}
	
	- for (var pi in CATEGORY.projects) {
		- var pkey = CATEGORY.projects[pi];
		- var project = DATA.PROJECTS[pkey];
		
		div: a(href=URLS.projectDetail(project.key))
			| #{project.name}
	- }
//-
	The landing page of the site

extends ../layouts/layout.jade

include ../mixins/navbar.jade
include ../mixins/carousel.jade
include ../mixins/linefiller.jade
include ../mixins/image.jade

block append headResources
	style(type="text/css").
		#head-carousel {
			height: 200px;
		}

block bodyHeading
	+carousel(DATA.HEAD_CAROUSEL_IMAGES, {
				indicators: false,
				controls: false
			})#head-carousel
		//- image markup to use
		mixin carouselImage(imgObj)
			+image_bgimg(imgObj)&attributes(attributes)
		//- caption markup to use
		mixin carouselCaption(imgObj)
			p&attributes(attributes) #{imgObj.getAlt()}

	+navbar({
				dynamicAffix: true
			})#navbar

block body
	+linefiller(60)

block bodyEndResources
	+image_preload(DATA.HEAD_CAROUSEL_IMAGES)